/* ========================== Product Banner ========================== */

.product-banner-section {  
    padding: 56px 0 97px;

    .product-container {
        max-width: 1200px;
        width: 100%;
        margin: 0 auto;
        overflow: hidden;

        .product-content-wrapper {
            display: flex;
            border: 4px solid #000000;

            .product-images-wrapper {
                display: flex;
                width: 63%;

                .product-image-wrapper {
                    width: 64%;

                    .product-image {
                        width: 100%;
                        height: 100%;
                        object-fit: cover;
                    }
                }

                .announcement-wrapper {
                    max-width: 64px;
                    transform: translateX(-468px);

                    .marquee-announcement-bar {
                        max-height: 64px;
                        width: 1000px;
                        overflow: hidden;
                        transform: rotate(90deg);
                    
                        &.download {
                        max-height: initial;
                        }
                    
                        .js-marquee {
                            display: flex;
                            align-items: center;
                            border-right: 0;
                            border-left: 0;
                            padding: 24px 0;
                            white-space: nowrap;
                        }
    
                        .announcement-bar__item {
                            position: relative;
                            font-family: Montserrat, sans-serif;
                            font-weight: 700;
                            font-size: 24px;
                            line-height: 16px;
                            margin-right: 16px;
                            transition: opacity .2s linear;
                    
