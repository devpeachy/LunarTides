/* ========================== Featured collection ========================== */
.product-wrap .image__container.product__imageContainer .image-element__wrap {
  height: auto !important;
}

.product-wrap.product-thumbnail-redesign-wrapper {

  .product-image__wrapper {

    .thumbnail-overlay__container {
      justify-content: flex-end;
      background-color: transparent;

      .quick-shop__buttons {

        span.button {
          width: 100%;
          background: #FFFFFF;
          font-weight: 700;
          font-size: 12px;
          line-height: 24px;
          text-transform: uppercase;
          color: #000000;
          border-radius: 0;
          padding: 12px 12px;
          transition: all .2s linear;

          @media (min-width: 1366px) {
            font-size: 16px;
          }

          &:hover {
            background: #000000;
            color: #FFFFFF;
          }
        }
      }
    }

    .as-wishlist-btn {
      top: 9px;
      right: 9px;

      @media (min-width: 1023px) {
        top: 18px;
        right: 18px;
      }

      .swym-button.swym-add-to-wishlist-view-product {
        &::after {
          color: #FFFFFF !important;
          font-size: 24px;

          @media (min-width: 1023px) {
            font-size: 32px;
          }
        }
      }
    }

    .product-image__badges {
      max-width: 120px;
      position: absolute;
      display: flex;
      gap: 5px;
      flex-wrap: wrap;
      top: 12px;
      left: 8px;
      right: 8px;
      z-index: 25;

      @media (min-width: 1200px) {
        top: 16px;
        left: 16px;
        right: 16px;
      }

      .badge-item {
        padding: 4px 8px;
        font-weight: 700;
        font-size: 10px;
        line-height: 14px;
        text-transform: uppercase;

        @media (min-width: 1200px) {
          font-size: 14px;
          line-height: 16px;
        }

        &.badge-best-seller {
          color: #FFFFFF;
          background: #532AB1;
          border: 1px solid #FFFFFF;
        }
  
        &.badge-new {
          color: #000000;
          background: #FFFFFF;
          border: 1px solid #000000;
        }
      }
    }

    .image__container {

      .image-element__wrap {

        img {
          width: 100%;
          height: 100%;
          object-fit: cover;
        }
      }
    }

    .sticker-holder {
      position: absolute;
      z-index: 25;
      width: 40px;
      height: 40px;
      top: -8px;
      left: -8px;

      @media (min-width: 1200px) {
        width: 56px;
        height: 56px;
        top: -16px;
        left: -16px;
      }


      .sticker-holder__content {
        width: 100%;
        max-width: 100%;

        .thumbnail-sticker {
          padding: 0;
        }

        .sale-sticker {
          width: 100%;
          height: 100%;
          display: flex;
          align-content: center;
          align-items: center;
          background: #FFFFFF;
          border: 1px solid #000000;
          border-radius: 32px;

          .sticker-text {
            font-weight: 700;
            font-size: 10px;
            line-height: 14px;
            text-transform: uppercase;
            color: #000000;

            @media (min-width: 1200px) {
              font-size: 14px;
              line-height: 16px;
            }
          }
        }
      }
    }
  }

  .thumbnail__caption {
    text-align: left;

    .product-thumbnail {
      padding-top: 8px;

      @media (min-width: 1023px) {
        padding-top: 16px;
      }

      .product-thumbnail__title {
        padding: 0;
        font-weight: 700;
        font-size: 16px;
        line-height: 24px;
        text-transform: uppercase;
        color: #000000;

        @media (min-width: 767px) {
          min-height: auto;
        }
      }

      .product-thumbnail__price {
        text-align: left;

        small {
          font-weight: 400;
          font-size: 16px;
          line-height: 24px;
          text-transform: lowercase;
          color: #8F8F8F;
          margin-right: 8px;
        }

        span {
          font-weight: 700;
          font-size: 16px;
          line-height: 24px;
          text-transform: uppercase;
          color: #000000;
        }
      }

      .product-thumbnail__was-price {
        span {
          font-weight: 400;
          font-size: 16px;
          line-height: 24px;
          text-decoration-line: line-through;
          text-transform: lowercase;
          color: #8F8F8F;

        }
      }
    }
  }
}

.product-thumbnail-redesign {
  padding: 0 !important;
  margin: 0 !important;

  @media (max-width: 767px) {
    &.product__grid-item {
      width: calc(50% - 10px);
    }
  }
}

.featured-collection-redesign__container {
  max-width: 1440px;
  width: 100%;
  margin: 0 auto;
  padding: 0 16px;

  @media (min-width: 767px) {
    padding: 0 20px;
  }

  @media (min-width: 1023px) {
    padding: 0 40px;
  }

  @media (min-width: 1366px) {
    padding: 0 80px;
  }
}

.featured-collection-redesign-without-image {

  .medium-down--one-half {
    width: calc(50% - 10px);

    @media (min-width: 767px) {
      width: calc(25% - 13px);
    }

    @media (min-width: 1024px) {
      width: calc(25% - 25px);
    }
  }

  .heading_click-to-shop {
    display: none;

    @media (min-width: 767px) {
      display: block;
    }

    &.button-bottom {
      display: block;
      margin-top: 40px;

      @media (min-width: 767px) {
        display: none;
      }
    }

    .heading-btn {
      display: inline-flex;
      justify-content: center;
      align-items: center;
      height: 48px;
      width: 100%;
      background: #FFFFFF;
      border: 2px solid #000000;
      font-weight: 700;
      font-size: 16px;
      line-height: 24px;
      text-align: center;
      text-transform: uppercase;
      color: #000000;
      transition: all .2s linear;

      @media (min-width: 767px) {
        width: 233px;
      }

      &:hover {
        background: #000000;
        color: #FFFFFF;
      }
    }
  }
  
  .featured-collection-heading-wrapper {
    display: flex;
    align-items: center;
    flex-direction: column;
    margin-bottom: 24px;

    @media (min-width: 767px) {
      margin-bottom: 40px;
      flex-direction: row;
      justify-content: space-between;
    }

    .heading-wrapper--featured-collection.heading-wrapper {
      width: fit-content;
      margin-bottom: 0;
      margin-left: 0;
      margin-right: 0;

      .featured-collection__title {
        font-weight: 800;
        font-size: 24px;
        line-height: 32px;
        text-align: center;
  
        @media (min-width: 767px) {
          font-size: 32px;
          line-height: 36px;
          text-align: left;
        }

        @media (min-width: 1023px) {
          font-size: 48px;
          line-height: 59px;
        }
      }
    }
  }

  .featured-collection-wrapper-redesign {
    gap: 24px 16px;

    @media (min-width: 1024px) {
      gap: 24px 32px;
    }
  }
}

.featured-collection-redesign-with-image {
  justify-content: space-between;

  .section-header {
    .heading-wrapper--featured-collection.heading-wrapper {
      margin: 0 !important;
      width: 100%;

      .featured-collection__title.title {
        font-weight: 800;
        font-size: 24px;
        line-height: 32px;
        text-align: center;
        color: #000000;
        margin-bottom: 24px;

        @media (min-width: 767px) {
          font-size: 32px;
          line-height: 36px;
          text-align: left;
          margin-bottom: 28px;
        }

        @media (min-width: 1023px) {
          font-size: 48px;
          line-height: 59px;
        }
      }
    }
  }

  .image-column {
    display: none;

    @media (min-width: 767px) {
      display: flex;
    }

    a {
      display: flex;
      top: 0;
      bottom: 0;
      left: 0;
      right: 0;
    }

    img {
      object-fit: cover;
    }

    .best-seller-wrap {
      position: absolute;
      bottom: -14px;
      right: -5px;
    }
  }

  .product-column-redesign {
    justify-content: center;
    gap: 16px;
  
    @media (min-width: 767px) {
      flex: 0 0 58% !important;
    }
  
    @media (min-width: 1023px) {
      gap: 24px;
    }
  }

  .featured-collection-reverse {
    flex-direction: row-reverse;
  }
}

/* ========================== Featured collection End ========================== */

/* ========================== New Footer ========================== */
.footer-redesign {
  background-color: #000000;

  .footer-redesign__container {
    max-width: 1440px;
    width: 100%;
    margin: 0 auto;
    padding: 0 16px;

    @media (min-width: 767px) {
      padding: 0 20px;
    }

    @media (min-width: 1023px) {
      padding: 0 40px;
    }

    @media (min-width: 1366px) {
      padding: 0 80px;
    }
  }

  .footer-redesign__content {
    padding: 40px 0 40px;

    @media (min-width: 767px) {
      padding: 40px 0 48px;
    }

    color: #FFFFFF;

    .footer-redesign__top-side {
      max-width: 612px;
      margin: 0 auto;
      margin-bottom: 80px;

      @media (min-width: 767px) {
        margin-bottom: 60px;
      }

      @media (min-width: 1366px) {
        margin-bottom: 100px;
      }

      .footer-main-title {
        font-weight: 800;
        font-size: 24px;
        line-height: 32px;
        text-align: center;
        text-transform: uppercase;
        color: #FFFFFF;
        margin-bottom: 16px;

        @media (min-width: 1023px) {
          font-size: 47px;
          line-height: 59px;
        }
      }
  
      .footer-main-subtitle {
        font-weight: 400;
        font-size: 16px;
        line-height: 24px;
        text-align: center;
        margin-bottom: 48px;
      }
  
      #newsletter_form {

        .success_text {
          color: #FFFFFF;
          background: transparent;
          padding-bottom: 6px;
        }

        .form__error {
          background: transparent;
          color: #FFFFFF;
        }

        .input-wrapper {
          display: flex;
          align-items: center;
          border-bottom: 1px solid #FFFFFF;

          input:-webkit-autofill {
            background: transparent;
          }

          input.input-email {
            width: 100%;
            padding: 8px 0 16px;
            font-weight: 400;
            font-size: 16px;
            line-height: 24px;
            background: transparent;
            color: #FFFFFF;
            border: none;
  
            &::placeholder {
              font-weight: 400;
              font-size: 16px;
              line-height: 24px;
              color: #FFFFFF;
            }
          }

          .button-submit {
            display: inline-block;
            outline: 0;
            border: 0;
            cursor: pointer;
            background: transparent;
            width: 40px;
            height: 40px;
          }
        }
      }
    }

    .footer-redesign__bottom-side {

      @media (min-width: 1366px) {
        position: relative;
        display: flex;
      }

      .footer-redesign__logo {

        @media (min-width: 1366px) {
          width: 400px;
        }

        .footer-logo {
          margin: 0 auto;
          width: 128px;
          height: 40px;

          @media (min-width: 1366px) {
            margin-left: 0;
          }

          img {
            width: 100%;
            height: 100%;
            object-fit: cover;
          }
        }
      }

      .footer-redesign__menus {
        margin-top: 24px;
        display: flex;
        flex-wrap: wrap;

        @media (min-width: 767px) {
          margin-top: 36px;
        }

        @media (min-width: 1366px) {
          margin-top: 0;
          width: 85%;
          flex-wrap: nowrap;
          justify-content: space-around;
        }

        .footer-menu {

          &.menu-1 {
            width: 50%;

            @media (min-width: 767px) {
              width: 25%;
            }
          }

          &.menu-2 {
            width: 50%;

            @media (min-width: 767px) {
              width: 25%;
              order: 3;
            }
          }

          &.menu-3 {
            width: 100%;
            margin-top: 40px;

            @media (min-width: 767px) {
              margin-top: 0;
              width: 50%;
            }

            .footer-menu-list {
              display: flex;
              flex-direction: column; 
              flex-wrap: wrap;
              height: 162px;
            }
          }

          .footer-menu-title {
            width: fit-content;
            font-weight: 700;
            font-size: 16px;
            line-height: 24px;
            text-transform: uppercase;
            margin-bottom: 16px;
          }

          .footer-menu-list {

            .link-item {
              display: block;
              width: fit-content;
              font-weight: 400;
              font-size: 16px;
              line-height: 24px;
              margin-bottom: 8px;
              color: #FFFFFF;
              transition: opacity .2s linear;

              &:hover {
                opacity: .6;
              }

              &:last-child {
                margin-bottom: 0;
              }
            }
          }
        }
      }

      .footer-redesign__social {
        margin-top: 40px;
        display: flex;
        align-items: center;
        justify-content: center;

        @media (min-width: 767px) {
          margin-top: 20px;
        }

        @media (min-width: 1366px) {
          margin-top: 0;
          flex-direction: column;
          position: absolute;
          top: 0;
          right: 0;
        }

        .social-item {
          width: 40px;
          height: 40px;
          margin: 0 20px;

          @media (min-width: 1366px) {
            margin: 0;
            margin-bottom: 30px;

            &:last-child {
              margin-bottom: 0;
            }
          }
        }
      }
    }

    .footer-redesign__small {
      position: relative;
      display: flex;
      flex-direction: column-reverse;
      margin-top: 29px;

      @media (min-width: 767px) {
        flex-direction: row;
        justify-content: space-between;
      }

      @media (min-width: 1366px) {
        justify-content: flex-start;
      }

      .footer-copyright {

        .copyright-text {
          font-weight: 400;
          font-size: 14px;
          line-height: 16px;
          text-align: center;
          color: #7E7E7E;
        }
      }

      .footer-payment-icons {
        max-width: 220px;
        margin: 0 auto;
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        justify-content: center;
        margin-bottom: 29px;

        @media (min-width: 767px) {
          margin: 0;
          max-width: 100%;
        }

        @media (min-width: 1366px) {
          position: absolute;
          bottom: 0;
          left: 50%;
          transform: translateX(-50%);
        }

        .payment-icon {
          width: 22px;
          height: 14px;
          margin: 9px 6px;

          @media (min-width: 767px) {
            margin: 0 6px;
          }
        }
      }
    }

  }
}
/* ========================== New Footer End ========================== */