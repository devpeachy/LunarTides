                .decoration-image-wrapper {
                    width: 190px;
                    .decoration-image-desk {
                        width: 100%;
                        height: 100%;
                        object-fit: cover;
                        display: inline-block;
                        border-right: 1px solid #000000;
                    }
                    .decoration-image-mob {
                        display: none;
                    }
                }
            }

            .product-title-wrapper {
                padding: 10px 0;
                width: 44%;
                display: flex;
                justify-content: center;
                flex-direction: column;
                align-items: center;
                line-height: normal;
