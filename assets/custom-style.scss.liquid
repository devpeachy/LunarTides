/* ========================== Reviews Banner ========================== */

.reviews-banner-section {
    padding: 8px 0;
    background-position: 0 0;
    background-repeat: no-repeat;
    background-size: cover;
    position: relative; 
    

    .reviews-desktop-mobile {
        display: none;
    }

    .reviews-desktop-background {
        display: block;
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -20;
    }

    .reviews-container {
        max-width: 1440px;
        width: 100%;
        margin: 0 auto;

        .review-wrapper {
            display: flex;
            justify-content: space-between !important;
            align-items: center;
            text-align: right;

