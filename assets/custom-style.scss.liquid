/* ========================== Reviews Banner ========================== */

.reviews-banner-section {
    padding: 8px 0;
    background-position: 0 0;
    background-repeat: no-repeat;
    background-size: cover;
    position: relative; 

    .reviews-desktop-mobile {
        display: none;
    }

    .reviews-desktop-background {
        display: block;
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -20;
    }

    .reviews-container {
        .review-wrapper {
            display: flex;
            justify-content: space-between !important;
            align-items: center;
            text-align: right;

            .reviews-content-wrapper {
                padding-left: 81px;
                padding-right: 14px;
                display: inline-block;
                text-align: left;

                &.content-right {
                    padding-right: 81px;
                    padding-left: 14px;
                }

                .reviews-title {
                    font-size: 24px;
                    font-weight: 700;
                    line-height: 32px;
                    max-width: 300px;
                    margin-bottom: 16px;
                    text-align: left;
                }

                .reviews-text {
                    font-size: 16px;
                    font-weight: 400;
                    line-height: 24px;
                    max-width: 512px;
                    margin-bottom: 40px;
                    text-align: left;
                }

                div {
                    position: relative;
                    display: inline-block;
                    width: auto;
                    height: auto;
                    transform: translateX(8px);

                    .reviews-button {
                        position: relative;
                        padding: 12px 40px;
                        background-color: #fff;
                        font-size: 16px;
                        font-weight: 700;
                        color: #000;
                        z-index: 10;
                        display: inline-block;

                        &:active {
                            transform: translate(-8px, 8px);
                        }
                    }
                    
                    .reviews-button-boxshadow {
                        position: absolute;
                        top: 8px;
                        left: -16px;
                        width: 100%;
                        height: 100%;
                        background-color: #7eeb28;
                        z-index: 0;
                    }
                }
            }
            .reviews-images-wrapper {
                display: flex;
                justify-content: space-between;
                text-align: right;
                width: 54%;

                &.image-center {
                    justify-content: center;
                }

                .reviews-image-wrapper {
                    display: inline-block;
                    width: 49.5%;

                    .reviews-image {
                        width: 100%;
                        height: 100%;
                        object-fit: cover;
                    }
                }
            }
        }
    }
}

@media (max-width: 768px) {
    .reviews-banner-section {
        padding: 8px 0;

        .reviews-desktop-background {
            display: none;
        }

        .reviews-desktop-mobile {
            display: block;
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -20;
        }

        .reviews-container {
            .review-wrapper {
                display: flex;
                flex-direction: column !important;
                text-align: center;

                &.col-rev {
                    flex-direction: column-reverse !important;

                    .reviews-content-wrapper {
                        div {
                            margin-bottom: 0;
                        }
                    }
                }
    
                .reviews-content-wrapper {
                    padding: 40px 16px 0;
                    text-align: center;
                    width: 100%;
    
                    .reviews-title {
                        text-align: center;
                        margin: 0 auto 24px;
                    }
    
                    .reviews-text {
                        text-align: center;
                        margin: 0 auto 40px;
                    }
    
                    div {
                        margin-bottom: 40px;
                    }
                }
                .reviews-images-wrapper {
                    display: flex;
                    justify-content: space-between;
                    text-align: right;
                    width: 100%;
    
                    .reviews-image-wrapper {
                        display: inline-block;
                        width: 49.5%;
    
                        .reviews-image {
                            width: 100%;
                            height: 100%;
                            object-fit: cover;
                        }
                    }
                }
            }
        }
    }
}

