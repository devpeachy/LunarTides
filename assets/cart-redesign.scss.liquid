#cart-main.section__wrapper {
    padding: 24px 0;
    color: #fff;
    max-width: 1100px;

    @media (min-width: 1200px) {
        padding: 80px 24px 112px;
    }
    
    .container {
        max-width: 1094px;
    }

    .cart__heading {
        width: 100%;
    }

    .cart__heading-container {
        margin-bottom: 24px;
        padding: 0 16px;
        
        @media (min-width: 1200px) {
            padding: 0;
            margin-bottom: 40px;
        }
    }

    .one-whole {
        width: 100%;
    }

    .heading-wrapper {
        margin: 0;
    }

    .column {
        margin: 0;
    }

    .cart__heading-wrapper {
        display: flex;
        align-items: center;
        justify-content: space-between;
        font-family: 'Druk Wide';
        font-size: 16px;
        line-height: 24px;

        @media (min-width: 1200px) {
            font-size: 32px;
            line-height: 40px;
        }
    }

    .cart__heading-wrapper_empty {
        font-size: 24px;
        line-height: 32px;
        justify-content: center;

        .cart__heading-count, .cart__headeing-back {
            display: none;
        }

        @media (min-width: 1200px) {
            font-size: 32px;
            line-height: 40px;
            justify-content: flex-start;
        }
    }

    .cart-page__title {
        font-size: 16px !important;
        line-height: 24px;
        color: #fff;
    }

    .cart__headeing-back {
        font-family: 'Montserrat';
        font-weight: 400;
        text-decoration: underline;
        color: #fff;

        @media (min-width: 1200px) {
            display: none;   
        }
    }

    .cart__text {
        margin-right: 10px;

        .item__title a {
            font-weight: 700;
            font-size: 12px;
            line-height: 16px;
            color: #fff;

            @media (min-width: 370px) {
                font-size: 16px;
                line-height: 24px;
            }

            @media (min-width: 1200px) {
                font-size: 24px;
                line-height: 32px;
            }
        }
    }

    .title {
        width: initial;
    }

    .cart__item-list  {
        max-height: 404px;
        overflow-y: auto;
        padding: 24px 0;
        border-top: 1px solid #FFFFFF;
        border-bottom: 1px solid #FFFFFF;

        @media (min-width: 767px) {
            border: 0;
            max-width: initial;
            max-height: 100%;
        }

        @media (min-width: 1200px) {
            padding: 0;
        }
    }

    .cart__card {
        padding: 0 16px;
        border: none;
        flex-wrap: nowrap;

        &:not(:last-child) {
            margin-bottom: 16px;
        }
        
        @media (min-width: 1200px) {
            padding: 0;
            padding-bottom: 24px;
            border-bottom: 1px solid #FFFFFF;

            &:not(:last-child) {
                margin-bottom: 40px;
            }
        }
    }

    .cart__image {
        width: initial;

        .image-element__wrap {
            border-radius: 8px;
            overflow: hidden;

            @media (min-width: 1200px) {
                height: 128px !important;
                width: 128px !important;
                max-height: 100% !important;

                img {
                    height: 100%;
                    max-height: 100% !important;
                }
            }
        }

        img {
            object-fit: cover;
        }
    }

    .cart__info-top {
        margin-bottom: 6px;

        @media (min-width: 1200px) {
            margin-bottom: 24px;
        }
    }

    .cart__price {
        width: auto;

        .money {
            font-weight: 700;
            font-size: 12px;
            line-height: 16px;
            text-align: right;

            @media (min-width: 370px) {
                font-size: 16px;
                line-height: 24px;
            }

            @media (min-width: 1200px) {
                font-size: 16px;
                line-height: 24px;
            }
        }
    }

    .item__properties {
        font-size: 14px;
        line-height: 16px;

        @media (min-width: 1200px) {
            padding-top: 24px;
        }
    }

    .cart__description {
        display: flex;
        width: 100%;
        max-width: initial;
        justify-content: space-between;
        margin-bottom: 6px;
        padding: 0;

        @media (min-width: 1200px) {
            margin-bottom: 0;
        }
    }
    
    .cart__info {
        display: block;
        padding-left: 16px;
        flex-grow: 1;
        width: initial;
        
        @media (min-width: 1200px) {
            padding-left: 40px;
        }
    }

    .cart__info-bottom {
        display: flex;
        justify-content: space-between;
        align-items: flex-end;
    }

    .purchase-details__quantity {
        margin-top: 0;
    }

    .cart__quantity {
        width: 80px;
        display: block;
        margin-top: 0;

        @media (min-width: 370px) {
            width: 100px;
        }

        @media (min-width: 1200px) {
            width: 70px;
        }
    }

    .a-cart__remove {
        .a-close, .cart__remove-btn {
            font-weight: 700;
            font-size: 14px;
            line-height: 24px;
            text-transform: none;
            color: #E5B0E0;

            @media (min-width: 1200px) {
                text-transform: uppercase;
            }
        }
    }

    .quantity-wrapper {
        border: 2px solid #E1E1E1;
        align-items: center;

        @media (min-width: 1200px) {
            border: 2px solid rgba(255, 255, 255, 0.16);
        }

        .quantity-input {
            font-weight: 600;
            font-size: 16px;
            line-height: 24px;
            background-color: transparent;
            border: none;
            padding: 0;
            color: #fff;
            height: 28px;
            min-height: inherit;

            @media (min-width: 1200px) {
                height: 24px;
                width: 22px;
            }
        }

        .control {
            position: static;
            height: auto;
            width: auto;
            background-color: transparent;
        }

        .minus-control, .plus-control {
            display: flex;
            align-items: center;
            justify-content: center;;
            flex-shrink: 0;
            padding: 4px 8px;

            @media (min-width: 1200px) {
                padding: 4px;
            }

            .quantity-plus, .quantity-minus  {
                flex-shrink: 0;
                width: 16px !important;
                min-height: 16px !important;

                svg {
                    width: 100%;
                    height: 100%;
                }

                @media (min-width: 370px) {
                    width: 24px !important;
                    min-height: 24px !important;
                }

                @media (min-width: 1200px) {
                    width: 16px !important;
                    height: 16px !important; 
                }
            }
            
            .quantity-element {
                padding: 0;
            }

            .icon {
                fill: #fff;
                padding: 0;
            }
        }
    }

    .cart__cost-summary {
        padding: 24px 16px;
        width: 100%;
        margin: 0;
        margin-top: 4px;
        justify-content: space-between;

        @media (min-width: 1200px) {
            padding: 40px 0 8px 0;
        }

        .medium-down--one-whole {
            width: 100%;
        }

        .cart__subtotal-container  {
            width: 100%;

            .cart__row-description {
                width: initial;

                .h3 {
                    font-weight: 700;
                    font-size: 16px;
                    line-height: 24px;
                    color: #ffff;

                    @media (min-width: 1200px) {
                        font-size: 24px;
                        line-height: 23px;
                    }
                }
            }

            .cart__subtotal {
                text-align: right;

                .money {
                    font-weight: 700;
                    font-size: 24px;
                    line-height: 32px;
                    color: #ffff;  
                }
            }
        }
    }

    .cart__checkout {
        min-height: 48px !important;
        height: 48px !important;

        @media (min-width: 767px) {
            min-width: initial;
            margin: 0;
        }

        .checkout {
            background-color: #fff;
            margin-bottom: 0;
            color: #000;
            height: 100%;
            padding: 15px;
            min-height: 48px !important;
            height: 48px !important;
        }
    }

    .additional-checkout-buttons {
        margin-top: 0;
    }

    .cart__featured-links {
        @media (min-width: 767px) {
            margin-top: 40px;
        }
        a {
            font-size: 16px;
            line-height: 24px;
            color: #fff;
            text-decoration: underline;
        }
    }

    .cart__checkout-container {

        .DefhEHZZf4y32pvV7mZj, .IcgSIE7pEVZrlnAeRS6j, .XLcXEW3RnM9fyU7k7fvC {
            height: 48px !important;
        }

        @media (min-width: 767px) {
            .additional-checkout-buttons {
                display: grid;
                grid-template-columns: 24% 3fr;
                column-gap: 24px;
            }
    
            .xGd3h1QpIzYq8GCXdELr, .p28_J2fRvZNDqyZkZ2H9 {
                flex-direction: row !important;
                column-gap: 24px;
                flex-wrap: nowrap !important;
            }

            .kqsiVA9Jf8LJAbxw8Bau {
                height: 48px !important;
            }
    
            .XLcXEW3RnM9fyU7k7fvC, .Vru56DW5IUIiRpxbGTDg {
                flex-basis: 33.333% !important;
                margin: 0 !important;
                height: 48px !important;

                * {
                    height: 48px !important;
                    max-height: 48px !important;
                }
            }
        }
    }

    .container.has-no-side-gutter {
        padding: 0 16px;
        display: block;
        width: 100%;
        max-width: initial;

        @media (min-width: 1200px) {
            padding: 0;
        }
    }

    .quote {
        font-weight: 400;
        font-size: 16px;
        line-height: 24px;
        color: #fff;
        margin-bottom: 24px;
    }

    .cart__empty-cart-message {
        padding: 0 16px;

        @media (min-width: 1200px) {
            padding: 80px 16px;
        }
    }

    .cart-main__btn {
        display: inline-flex;
        justify-content: center;
        font-family: 'Druk Wide';
        font-size: 16px;
        line-height: 24px;
        border-radius: 0px 24px;
        padding: 0 24px;
        background-color: #fff;

        .cart-main__btn-text {
            padding: 12px 0;
        }

        .cart-main__btn-icon {
            display: flex;
            align-items: center;
            padding-left: 28px;
            margin-left: 24px;
            border-left: 1px solid #000;
        }
    }
}

.paypal-button, .paypal-button:not(.paypal-button-card) {
    height: 48px !important;
    min-height: 48px !important;
    max-height: 48px !important;
}