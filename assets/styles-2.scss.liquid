  transform: translate(-50%, 0%);
  max-width: 90%;
  opacity: 0;
  transition: 0.8s ease;
  visiblity: hidden;
  &.open {
    transform: translate(-50%, -50%);
    opacity: 1;
    visibility: visible;
  }
  &.close {
    transform: translate(-50%, 0%);
    opacity: 0;
    visibility: hidden;
  }
  & .buttons {
    @include justify-content(space-between);
    & > .button {
      width: calc(50% - 10px);
    }
  }
  & .age-popup__warning {
    display: none;
    padding: 28px 0;
  }
}


