#theme-ajax-cart {
  .ajax-cart__cart-title {
    padding: 24px 32px;
    border-bottom: 1px solid rgba(211,211,211,.5);
    text-align: left;

    font-family: 'Montserrat';
    font-style: normal;
    font-weight: 700;
    font-size: 16px;
    line-height: 24px;
    /* identical to box height, or 150% */

    text-transform: uppercase;
  }

  .ajax-cart__close-icon {
    margin: 0;
    right: 32px;
    top: 26px;
    position: absolute;

    svg {
      position: absolute;
      fill: #BABABA;
      width: 14px;
      height: 14px;
      margin: 0;
    }
  }

  .ajax-cart__list-wrapper {
    padding: 16px 16px 16px 32px;
    height: 400px;
    overflow: hidden;

    .ajax-cart__list {
      height: calc(400px - 32px);
      padding: 0 16px 0 0;
      overflow-y: scroll;
      position: relative;

      &::-webkit-scrollbar {
        width: 2px;
        position: absolute;
        right: 32px;
        top: 0;
      }

      &::-webkit-scrollbar-track {
        background: transparent;
      }

      &::-webkit-scrollbar-thumb {
        background: #979797;
        border-radius: 8px;
      }

      .ajax-cart__product {
        padding: 0;
        margin: 0 0 16px;
        min-height: 0;
        border: none;
        display: flex;
        justify-content: space-between;

        &:last-child {
          margin: 0;
        }

        .ajax-cart__product-image {
          width: 30%;
          margin-right: 16px;

          img {
            height: 112px;
            width: 100%;
            object-fit: cover;
            object-position: top;
          }
        }

        .ajax-cart__product-content {
          width: calc(70% - 16px);
          min-height: 100px;
          display: flex;
          flex-direction: column;
          justify-content: space-between;

          .top {
            display: flex;

            .ajax-cart__product-title {
              width: calc(60% - 16px);
              margin-right: 16px;

              a {
                font-family: 'Montserrat';
                font-style: normal;
                font-weight: 700;
                font-size: 16px;
                line-height: 24px;
                text-transform: uppercase;

                color: #000000;
              }
            }

            .price-wrapper {
              width: 40%;

              .ajax-cart__price {
                padding: 0;

                .money {
                  font-family: 'Montserrat';
                  font-style: normal;
                  font-weight: 700;
                  font-size: 16px;
                  line-height: 24px;
                  text-align: right;
                  text-transform: uppercase;

                  color: #000000;
                }
              }

              span.sale {
                font-family: 'Montserrat';
                font-style: normal;
                font-weight: 700;
                font-size: 16px;
                line-height: 24px;
                text-align: right;
                text-transform: uppercase;

                color: #000000;
              }

              span.was-price {
                font-family: 'Montserrat';
                font-style: normal;
                font-weight: 400;
                font-size: 14px;
                line-height: 24px;
                text-align: right;
                text-decoration-line: line-through;
                text-transform: uppercase;

                color: #BABABA;
              }
            }
          }

          .middle {
            p {
              font-family: 'Montserrat';
              font-style: normal;
              font-weight: 400;
              font-size: 14px;
              line-height: 16px;
              text-align: left;

              color: #000000;

              margin: 4px 0 6px;
            }
          }

          .bottom {
            display: flex;
            justify-content: space-between;
            align-items: end;

            .qty-wrapper {
              padding: 4px 11px;

              display: flex;
              justify-content: space-between;
              align-items: center;

              border: 2px solid #d9d9d9;

              svg {
                cursor: pointer;
                position: relative;

                &:after {
                  content: '';
                  width: 12px;
                  height: 12px;
                  left: 50%;
                  top: 50%;
                  position: absolute;
                  transform: translate(-50%, -50%);
                }
              }

              span {
                margin: 0 16px;
                font-family: 'Montserrat';
                font-style: normal;
                font-weight: 400;
                font-size: 16px;
                line-height: 24px;

                text-align: center;

                color: #000000;
              }

            }

           .ajax-cart__delete {
             font-family: 'Montserrat';
             font-style: normal;
             font-weight: 400;
             font-size: 14px;
             line-height: 24px;
             text-decoration-line: underline;

             color: #979797;
           }
          }
        }

        .ajax-cart__right-content {
          display: none !important;
        }
      }

      .recommended-wrapper {
        position: relative;
        padding: 16px 0;
        border-top: 1px solid #D9D9D9;

        p {
          font-family: 'Montserrat';
          font-style: normal;
          font-weight: 700;
          font-size: 16px;
          line-height: 24px;
          text-transform: uppercase;
          text-align: left;

          margin-bottom: 16px;

          color: #000000;
        }

        .upsell-products__wrapper {
          .upsell-product {
            display: flex;
            justify-content: space-between;
            margin-bottom: 12px;

            &:last-child {
              margin-bottom: 0;
            }

            .product-image-wrapper {
              width: 30%;
              margin-right: 16px;

              img {
                height: 112px;
                width: 100%;
                object-fit: cover;
                object-position: top;
              }
            }

            .product-content-wrapper {
              width: calc(70% - 16px);
              display: flex;
              flex-direction: column;
              justify-content: space-between;
              margin: 6px 0;

              p {
                font-family: 'Montserrat';
                font-style: normal;
                font-weight: 700;
                font-size: 16px;
                line-height: 24px;
                margin: 0;

                text-transform: uppercase;

                color: #000000;
              }

              .upsell-product-variants-wrapper {
                display: flex;
                margin-top: 6px;

                .upsell-product-variant {
                  margin-right: 6px;

                  input:checked ~ label {
                    border: 1px solid #000;
                  }

                  label {
                    cursor: pointer;
                    padding: 6px;
                    border: 1px solid #D9D9D9;
                  }
                }
              }

              .price-wrapper {
                margin-top: 8px;

                span {
                  font-family: 'Montserrat';
                  font-style: normal;
                  font-weight: 700;
                  font-size: 16px;
                  line-height: 24px;
                  text-align: right;
                  text-transform: uppercase;

                  color: #000000;

                  &.discounted-price {
                    text-decoration-line: line-through;
                    color: #BABABA;
                  }
                }
              }

              .atc {
                font-family: 'Montserrat';
                font-style: normal;
                font-weight: 400;
                font-size: 16px;
                line-height: 24px;
                text-decoration-line: underline;

                margin-bottom: 6px;

                color: #000000;
              }
            }
          }
        }
      }
    }
  }

  .ajax-cart__details-wrapper {
    border-top: 1px solid rgba(211,211,211,.5);
  }

  .ajax-cart__empty-cart-message {
    .ajax-cart__cart-title {
      margin: 0;
    }

    .empty-cart__wrapper {
      padding: 24px 32px;

      .ajax-cart__empty-text {
        font-family: 'Montserrat';
        font-style: normal;
        font-weight: 700;
        font-size: 16px;
        line-height: 24px;
        text-transform: uppercase;
        text-align: left;

        color: #000000;
        margin: 0;
      }

      .ajax-cart__empty-subtext {
        margin: 8px 0 24px;

        text-align: left;
        font-family: 'Montserrat';
        font-style: normal;
        font-weight: 400;
        font-size: 16px;
        line-height: 24px;

        color: #000000;
      }

      .recommended-products__wrapper {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;

        .empty-rec-product {
          width: calc(50% - 12px);

          &:nth-child(3n),
          &:nth-child(4n) {
            p {
              margin-bottom: 0;
            }
          }

          p {
            font-family: 'Montserrat';
            font-style: normal;
            font-weight: 700;
            font-size: 16px;
            line-height: 24px;

            text-align: center;
            text-transform: uppercase;

            color: #000000;

            margin: 8px 0 24px;
          }
        }
      }
    }
  }
}