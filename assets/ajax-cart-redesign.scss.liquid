#theme-ajax-cart {
  &.theme-ajax-cart--header-redesigned {
    .ajax-cart {
      color: #FFFFFF;
    }

    .card {
      border-width: 1px 0 1px 0;
      border-style: solid;
      border-color: #FFFFFF;
      background-color: #000000;

      @media (min-width: 480px) {
        border-width: 1px 0 1px 1px;
      }

      @media (min-width: 1442px) {
        border-width: 1px 1px 1px 1px;
      }
    }

    .ajax-cart__cart-count {

    }

    .ajax-cart__cart-title {
      padding: 24px 7px;
      border-bottom: 1px solid #FFFFFF;
      text-align: left;

      font-family: 'Druk Wide', sans-serif;
      font-style: normal;
      font-weight: 700;
      font-size: 16px;
      line-height: 24px;
      text-transform: uppercase;
      color: #FFFFFF;

      @media (min-width: 480px) {
        padding: 24px 32px;
      }
    }

    .ajax-cart__close-icon {
      margin: 0;
      right: 7px;
      top: 26px;
      position: absolute;

      svg {
        position: absolute;
        fill: #BABABA;
        width: 14px;
        height: 14px;
        margin: 0;
      }

      @media (min-width: 480px) {
        right: 32px;
      }
    }

    .ajax-cart__list-wrapper {
      padding: 24px 16px;
      height: 400px;
      overflow: hidden;

      @media (min-width: 480px) {
        padding: 16px 16px 16px 32px;
      }

      .ajax-cart__list {
        height: calc(400px - 32px);
        padding: 0 16px 0 0;
        overflow-y: scroll;
        position: relative;

        &::-webkit-scrollbar {
          width: 2px;
          position: absolute;
          right: 32px;
          top: 0;
        }

        &::-webkit-scrollbar-track {
          background: transparent;
        }

        &::-webkit-scrollbar-thumb {
          background: #FFFFFF;
          border-radius: 8px;
        }

        .ajax-cart__product {
          padding: 0;
          margin: 0 0 16px;
          min-height: 0;
          border: none;
          display: flex;
          justify-content: space-between;

          &:last-child {
            margin: 0;
          }

          .ajax-cart__product-image {
            width: 90px;
            margin-right: 16px;
            border-radius: 8px;

            @media (min-width: 365px) {
              width: 106px;
            }

            @media (min-width: 480px) {
              width: 31%;
            }

            img {
              height: 106px;
              width: 100%;
              object-fit: cover;
              object-position: top;
              border-radius: 8px;

              @media (min-width: 480px) {
                height: 112px;
              }
            }
          }

          .ajax-cart__product-content {
            width: calc(70% - 16px);
            min-height: 100px;
            display: flex;
            flex-direction: column;
            justify-content: space-between;

            .top {
              display: flex;

              .ajax-cart__product-title {
                width: calc(60% - 16px);
                margin-right: 16px;

                a {
                  font-family: 'Montserrat', sans-serif;
                  font-style: normal;
                  font-weight: 700;
                  font-size: 13px;
                  line-height: 19px;
                  text-transform: uppercase;
                  color: #FFFFFF;

                  @media (min-width: 365px) {
                    font-size: 16px;
                    line-height: 24px;
                  }
                }
              }

              .price-wrapper {
                width: 40%;

                .ajax-cart__price {
                  padding: 0;
                  margin-top: 0;

                  .money {
                    margin: 0 0 0 auto;
                    display: block;
                    font-family: 'Montserrat', sans-serif;
                    font-style: normal;
                    font-weight: 700;
                    font-size: 13px;
                    line-height: 15px;
                    text-align: right;
                    text-transform: uppercase;
                    color: #FFFFFF;

                    @media (min-width: 365px) {
                      font-size: 16px;
                      line-height: 20px;
                    }
                  }
                }

                span.sale {
                  margin: 0 0 0 auto;
                  display: block;
                  font-family: 'Montserrat', sans-serif;
                  font-style: normal;
                  font-weight: 700;
                  font-size: 13px;
                  line-height: 15px;
                  text-align: right;
                  text-transform: uppercase;
                  color: #FFFFFF;

                  @media (min-width: 365px) {
                    font-size: 16px;
                    line-height: 20px;
                  }
                }

                span.was-price {
                  margin: 0 0 0 auto;
                  display: block;
                  font-family: 'Montserrat', sans-serif;
                  font-style: normal;
                  font-weight: 400;
                  font-size: 13px;
                  line-height: 20px;
                  text-align: right;
                  text-decoration-line: line-through;
                  text-transform: uppercase;
                  color: #FFFFFF;

                  @media (min-width: 365px) {
                    font-size: 14px;
                    line-height: 20px;
                  }
                }
              }
            }

            .middle {
              p {
                font-family: 'Montserrat', sans-serif;
                font-style: normal;
                font-weight: 400;
                font-size: 14px;
                line-height: 16px;
                text-align: left;

                color: #FFFFFF;

                margin: 4px 0 6px;
              }
            }

            .bottom {
              display: flex;
              justify-content: space-between;
              align-items: end;

              .qty-wrapper {
                padding: 2px 7px;

                display: flex;
                justify-content: space-between;
                align-items: center;
                border: 2px solid #FFFFFF;

                @media (min-width: 365px) {
                  padding: 2px 13px;
                }

                @media (min-width: 480px) {
                  padding: 2px 7px;
                }

                .qty-btn-plus, .qty-btn-minus {
                  width: 14px;
                  height: 14px;

                  @media (min-width: 480px) {
                    width: 10px;
                    height: 10px;
                  }
                }

                svg {
                  cursor: pointer;
                  position: relative;

                  &:after {
                    content: '';
                    width: 12px;
                    height: 12px;
                    left: 50%;
                    top: 50%;
                    position: absolute;
                    transform: translate(-50%, -50%);
                  }
                }

                span {
                  margin: 0 18px;
                  font-family: 'Montserrat', sans-serif;
                  font-style: normal;
                  font-weight: 600;
                  font-size: 16px;
                  line-height: 24px;
                  text-align: center;
                  color: #FFFFFF;

                  @media (min-width: 480px) {
                    margin: 0 13px;
                    font-weight: 400;
                  }
                }

              }

              .ajax-cart__delete {
                font-family: 'Montserrat', sans-serif;
                font-style: normal;
                font-weight: 700;
                font-size: 14px;
                line-height: 24px;
                text-decoration-line: none;
                color: #E5B0E0;
              }
            }
          }

          .ajax-cart__right-content {
            display: none !important;
          }
        }

        .recommended-wrapper {
          position: relative;
          padding: 16px 0 16px;
          border-top: none;

          @media (min-width: 365px) {
            padding: 26px 0 16px;
            border-top: 1px solid #FFFFFF;
          }

          p {
            font-family: 'Montserrat', sans-serif;
            font-style: normal;
            font-weight: 700;
            font-size: 16px;
            line-height: 24px;
            text-transform: uppercase;
            text-align: left;
            margin-bottom: 16px;
            color: #FFFFFF;
          }

          .upsell-products__wrapper {
            .upsell-product {
              display: flex;
              justify-content: space-between;
              margin-bottom: 14px;

              &:last-child {
                margin-bottom: 0;
              }

              .product-image-wrapper {
                width: 90px;
                margin-right: 16px;
                border-radius: 8px;

                @media (min-width: 365px) {
                  width: 106px;
                }

                @media (min-width: 480px) {
                  width: 31%;
                }

                img {
                  height: 106px;
                  width: 100%;
                  object-fit: cover;
                  object-position: top;
                  border-radius: 8px;

                  @media (min-width: 480px) {
                    height: 112px;
                  }
                }
              }

              .product-content-wrapper {
                width: calc(70% - 16px);
                display: flex;
                flex-direction: column;
                justify-content: space-between;
                margin: 6px 0;

                p {
                  font-family: 'Montserrat', sans-serif;
                  font-style: normal;
                  font-weight: 700;
                  font-size: 16px;
                  line-height: 24px;
                  margin: 0;

                  text-transform: uppercase;

                  color: #FFFFFF;
                }

                .upsell-product-variants-wrapper {
                  display: flex;
                  margin-top: 6px;

                  .upsell-product-variant {
                    margin-right: 6px;

                    input:checked ~ label {
                      border: 1px solid #FFFFFF;
                      color: #FFFFFF;
                    }

                    label {
                      cursor: pointer;
                      padding: 6px;
                      border: 1px solid #cdcdcd;
                      color: #cdcdcd;
                    }
                  }
                }

                .price-wrapper {
                  margin-top: 8px;

                  span {
                    font-family: 'Montserrat', sans-serif;
                    font-style: normal;
                    font-weight: 700;
                    font-size: 16px;
                    line-height: 24px;
                    text-align: right;
                    text-transform: uppercase;
                    color: #FFFFFF;

                    &.discounted-price {
                      text-decoration-line: line-through;
                      color: #FFFFFF;
                    }
                  }
                }

                .atc {
                  font-family: 'Montserrat', sans-serif;
                  font-style: normal;
                  font-weight: 400;
                  font-size: 16px;
                  line-height: 24px;
                  text-decoration-line: underline;
                  margin-bottom: 6px;
                  color: #FFFFFF;
                }
              }
            }
          }
        }
      }
    }

    .ajax-cart__details-wrapper {
      padding: 24px 16px 18px;
      border-top: 1px solid #FFFFFF;

      @media (min-width: 480px) {
        padding: 24px 32px 14px;
      }

      .ajax-cart__subtotal {
        padding: 0 0 8px;

        .ajax-cart__row-description {
          font-family: 'Montserrat', sans-serif;
          font-style: normal;
          font-weight: 700;
          font-size: 16px;
          line-height: 24px;
          text-transform: uppercase;
          color: #FFFFFF;
        }

        span.money {
          font-family: 'Montserrat', sans-serif;
          font-style: normal;
          font-weight: 700;
          font-size: 22px;
          line-height: 32px;
          text-align: right;
          text-transform: uppercase;
          color: #FFFFFF;

          @media (min-width: 480px) {
            font-size: 24px;
          }
        }
      }

      .ajax-cart__shipping-capture {
        padding: 0 0 16px;

        font-family: 'Montserrat', sans-serif;
        font-style: normal;
        font-weight: 400;
        font-size: 16px;
        line-height: 24px;
        color: #FFFFFF;
      }

      .ajax-cart__button-wrapper {
        .ajax-cart__button {
          width: 100%;
          max-width: 100%;
          min-height: auto;
          height: fit-content;
          padding: 12px;
          font-family: 'Montserrat', sans-serif;
          font-style: normal;
          font-weight: 700;
          font-size: 16px;
          line-height: 24px;
          text-align: center;
          text-transform: uppercase;
          color: #000000;
          background-color: #FFFFFF;
          border-radius: 0 24px;

          &:hover {
            background-color: rgba(255, 255, 255, 0.73);
          }

          @media (min-width: 480px) {
            border-radius: 0;
          }
        }

        .ajax-cart__cart-link {
          margin: 12px auto 0;
          font-family: 'Montserrat', sans-serif;
          font-style: normal;
          font-weight: 700;
          font-size: 14px;
          line-height: 24px;
          text-align: center;
          text-decoration-line: underline;
          text-transform: uppercase;
          color: #FFFFFF;
        }
      }
    }

    .ajax-cart__empty-cart-message {
      .ajax-cart__cart-title {
        margin: 0;
      }

      .empty-cart__wrapper {
        padding: 16px 16px 24px;

        @media (min-width: 480px) {
          padding: 24px 32px 8px;
        }

        .ajax-cart__empty-text {
          font-family: 'Montserrat', sans-serif;
          font-style: normal;
          font-weight: 700;
          font-size: 16px;
          line-height: 24px;
          text-transform: uppercase;
          text-align: left;

          color: #FFFFFF;
          margin: 0;
        }

        .ajax-cart__empty-subtext {
          margin: 8px 0 24px;

          text-align: left;
          font-family: 'Montserrat', sans-serif;
          font-style: normal;
          font-weight: 400;
          font-size: 16px;
          line-height: 24px;

          color: #FFFFFF;
        }

        .recommended-products__wrapper {
          display: flex;
          flex-wrap: wrap;
          justify-content: space-between;

          .empty-rec-product {
            width: calc(50% - 12px);

            img {
              border-radius: 8px;
            }

            &:nth-child(3n),
            &:nth-child(4n) {
              p {
                margin-bottom: 0;
              }
            }

            p {
              font-family: 'Montserrat', sans-serif;
              font-style: normal;
              font-weight: 700;
              font-size: 16px;
              line-height: 24px;

              text-align: center;
              text-transform: uppercase;

              color: #FFFFFF;

              margin: 8px 0 24px;
            }
          }
        }
      }
    }
  }
}


/* ========================== PDP MAIN ========================== */
.product__main-redesigned {
  max-width: 1440px;
  width: 100%;
  padding: 0 0 32px;
  background-color: transparent;

  @media (min-width: 600px) {
    padding: 8px 25px 56px;
  }

  @media (min-width: 1300px) {
    padding: 8px 80px 56px;
  }

  .product_section {
    display: flex;
    flex-direction: column;

    @media (min-width: 900px) {
      flex-direction: row;
    }

    .product__images {
      max-width: 600px;
      width: 100%;
      flex-shrink: 0;
      margin: 0 auto 32px;

      @media (min-width: 900px) {
        max-width: 450px;
        margin: 0;
      }

      @media (min-width: 1100px) {
        max-width: 550px;
      }

      @media (min-width: 1200px) {
        max-width: 624px;
      }

      .product-gallery-grid {
        display: none;

        @media (min-width: 900px) {
          display: block;
        }

        .product-gallery-grid__main {
          display: grid;
          grid-template-columns: repeat(2, 1fr);
          grid-column-gap: 4px;
          grid-row-gap: 4px;

          .product-gallery-grid__image {
            .product-gallery__link {
              height: 100%;

              .image__container {
                height: 100%;

                img {
                  height: 100%;
                  object-fit: cover;
                }
              }
            }
          }
        }
      }

      .product-gallery-slider {
        display: block;

        @media (min-width: 900px) {
          display: none;
        }

        .pdp-gallery-slider {
          .pdp-gallery-slider__wrapper {
            padding: 0 0 30px;

            .product-gallery-grid__image {

            }
          }

          .pdp-gallery-slider-dots-pag {
            bottom: 0;
            align-items: center;
            display: flex;
            justify-content: center;

            .swiper-pagination-bullet {
              width: 8px;
              height: 8px;
              background: #D9D9D9;
              margin: 0 5px;
              opacity: 1;

              &.swiper-pagination-bullet-active {
                width: 12px;
                height: 12px;
                background: #E5B0E0;
              }
            }
          }
        }
      }
    }

    .product__information {
      position: relative;
      max-width: 600px;
      width: 100%;
      height: fit-content;
      flex-grow: 1;
      margin: 0 auto;
      padding: 0 16px;

      @media (min-width: 900px) {
        position: sticky;
        top: 105px;
        margin: 0 0 0 32px;
        padding: 0;
        max-width: 100%;
      }

      .vendor {
        span {
          a {
            color: #FFFFFF;
          }
        }
      }

      .sku {
        color: #FFFFFF;
      }

      .product_name {
        margin: 0 0 8px;
        padding: 0 45px 0 0;
        font-family: 'Druk Wide', sans-serif;
        font-style: normal;
        font-weight: 700;
        font-size: 24px;
        line-height: 32px;
        color: #FFFFFF;

        @media (min-width: 600px) {
          margin: 0 0 16px;
          font-size: 32px;
          line-height: 40px;
        }
      }

      .as-wishlist-btn.as-wishlist-btn-pdp-redesign {
        top: 3px;
        right: 16px;
        z-index: 15;

        @media (min-width: 480px) {
          top: 12px;
        }

        @media (min-width: 600px) {
          right: 0;
        }

        .swym-button {
          height: 30px;

          &:after {
            font-size: 29px;
            color: #FFFFFF !important;
          }
        }
      }

      .modal_price {
        font-family: 'Montserrat', sans-serif;
        font-style: normal;
        font-weight: 600;
        color: #FFFFFF;

        .current_price {
          font-size: 24px;
          line-height: 32px;
        }

        .was-price {
          color: #FFFFFF;
        }
      }

      .product-form-container-redesign {
        padding: 0;
        margin: 24px 0 0;

        .product__notify-form {
          .notify_form__inputs {
            .field {
              .control  {
                input[type='submit'] {
                  height: 100%;
                }
              }
            }
          }
        }
      }

      .product_form-redesign {
        .atc-block {
          display: flex;
          width: 100%;
          flex-direction: column;

          @media (min-width: 480px) {
            flex-direction: row;
          }

          .atc-block__left {
            display: flex;
            max-width: 100%;
            width: 100%;

            @media (min-width: 480px) {
              max-width: 205px;
              width: fit-content;
              flex-shrink: 0;
            }

            .purchase-details__quantity-redesign {
              margin: 0;
              width: 50%;

              @media (min-width: 480px) {
                width: fit-content;
              }

              .label {
                display: none;
              }

              .quantity-wrapper-redesign {
                display: flex;
                align-items: center;
                justify-content: space-between;
                border: 2px solid #FFFFFF;
                max-width: 100%;
                padding: 10px 15px;
                margin: 0 16px 0 0;

                @media (min-width: 360px) {
                  padding: 10px 21px;
                }

                @media (min-width: 480px) {
                  padding: 10px 11px;
                  max-width: 82px;
                }

                .plus-control, .minus-control {
                  position: static;
                  width: 14px !important;
                  min-height: 14px !important;
                  padding: 0;

                  @media (min-width: 480px) {
                    width: 10px !important;
                    min-height: 10px !important;
                  }

                  .quantity-element {
                    width: 14px !important;
                    min-height: 14px !important;
                    padding: 0;
                    display: flex;
                    align-items: center;
                    justify-content: center;

                    svg {
                      width: 14px;
                      height: 14px;
                    }

                    @media (min-width: 480px) {
                      svg {
                        width: 10px;
                        height: 10px;
                      }

                      width: 10px !important;
                      min-height: 10px !important;
                    }

                    .qty-btn-minus {
                      margin: 3px 0 0;
                    }
                  }
                }

                .quantity-input-control {
                  background-color: transparent;
                  width: fit-content !important;

                  .quantity-input {
                    background-color: transparent;
                    padding: 0;
                    font-family: 'Montserrat', sans-serif;
                    font-style: normal;
                    font-weight: 600;
                    font-size: 16px;
                    line-height: 24px;
                    text-align: center;
                    color: #FFFFFF;
                    border: none;
                    min-height: auto;
                    height: fit-content;
                    max-width: none;
                  }
                }
              }
            }

            .select-container-redesign {
              width: 50%;

              @media (min-width: 480px) {
                width: fit-content;
                max-width: 110px;
              }

              .label {
                display: none;
              }

              .selector-wrapper {
                margin: 0;

                .select {
                  width: 100%;
                  border: 2px solid #FFFFFF;
                  height: 48px;

                  @media (min-width: 480px) {
                    width: fit-content;
                  }

                  select {
                    position: relative;
                    font-family: 'Montserrat', sans-serif;
                    font-style: normal;
                    font-weight: 600;
                    font-size: 16px;
                    line-height: 24px;
                    color: #FFFFFF;
                    background-color: transparent;
                    width: 100%;
                    padding: 10px 51px 13px 30px;
                    height: 48px;
                    border: none;

                    @media (min-width: 365px) {
                      padding: 10px 51px 13px 55px;
                    }

                    @media (min-width: 480px) {
                      width: fit-content;
                      padding: 10px 51px 13px 12px;
                    }
                  }

                  &:after {
                    position: absolute;
                    top: 39%;
                    right: 22px;
                    transform: translate(0, 50%);
                    content: '';
                    width: 12px;
                    height: 8px;
                    background-image: url("{{ 'select-arrow-white.svg' | asset_url }}");
                    background-size: contain;
                    background-repeat: no-repeat;
                  }
                }
              }
            }
          }

          .atc-block__right {
            flex-grow: 1;
            margin: 24px 0 0;

            @media (min-width: 480px) {
              margin: 0 0 0 16px;
            }

            .cart-warning {
              margin: 0;
            }

            .purchase-details__buttons {
              margin: 0;

              button {
                padding: 12px;
                background: #FFFFFF;
                border-radius: 0 24px;
                border: none;
                margin: 0;
                width: 100%;
                max-width: 100%;

                .text {
                  font-family: 'Druk Wide', sans-serif;
                  font-style: normal;
                  font-weight: 500;
                  font-size: 16px;
                  line-height: 24px;
                  text-transform: uppercase;
                  color: #000000;

                  @media (min-width: 900px) {
                    font-size: 13px;
                  }

                  @media (min-width: 1024px) {
                    font-size: 16px;
                  }
                }

                .checkmark path {
                  stroke: #000000;
                }
              }

              .swym-button-bar {
                display: none;
              }
            }
          }
        }

        .shop-pay-block {
          margin: 24px 0 0;
          font-family: 'Montserrat', sans-serif;
          font-style: normal;
          font-weight: 700;
          font-size: 16px;
          line-height: 24px;
          color: #FFFFFF;

          .shop-pay-logo {
            width: 101px !important;
            height: 24px !important;
          }
        }

        .additional-payment-methods {
          margin: 24px 0 0;

          .shopify-payment-button__more-options {
            padding: 15px 0 0;
            color: #FFFFFF;
          }
        }

        .description-redesign {
          margin: 24px 0 0;
          padding: 0;
          color: #FFFFFF;

          p {
            font-family: 'Montserrat', sans-serif;
            font-style: normal;
            font-weight: 400;
            font-size: 16px;
            line-height: 24px;
            color: #FFFFFF;
          }

          .accordion {
            display: none;
          }
        }

        .current-color-block {
          display: flex;
          flex-direction: column;
          margin: 8px 0 0;

          @media (min-width: 480px) {
            flex-direction: row;
            align-items: center;
            margin: 24px 0 0;
          }

          .capture {
            margin: 0 0 8px;
