        border: 1px solid #FFFFFF;
        border-radius: 8px;
        padding: 0;

        @media (min-width: 480px) {
          margin: 30px 0 0;
        }

        .accordion {
          position: relative;
          padding: 22px 16px 8px;
          font-family: 'Montserrat', sans-serif;
          font-style: normal;
          font-weight: 700;
          font-size: 16px;
          line-height: 24px;
          color: #FFFFFF;
          background-color: transparent;
          transition: all .2s linear;

          &.active {
            padding: 22px 16px 16px;

            &:before {
              opacity: 0;
            }
          }

          &:after {
            position: absolute;
            content: '';
            top: 34px;
            right: 23px;
            transform: translate(0, -50%);
            height: 1px;
            width: 20px;
            background-color: #FFFFFF;
          }

          &:before {
            position: absolute;
            content: '';
            top: 24px;
            right: 33px;
            height: 20px;
            width: 1px;
            background-color: #FFFFFF;
            transition: opacity .2s linear;
          }
        }

