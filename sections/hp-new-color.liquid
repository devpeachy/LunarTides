          "label":"Section background color"
       },
       {
          "type":"image_picker",
          "id":"bg_image_desktop",
          "label":"Desktop background image"
       },
       {
          "type":"image_picker",
          "id":"bg_image_mobile",
          "label":"Mobile background image"
       },
       {
          "type":"image_picker",
          "id":"content_image_mobile",
          "label":"Image mobile"
       },
       {
          "type":"image_picker",
          "id":"content_image_desktop",
          "label":"Image desktop"
       },
       {
          "type":"textarea",
          "id":"title",
          "label":"Section title"
       },
       {
          "type":"textarea",
          "id":"text",
          "label":"Section text"
       },
       {
          "type":"text",
          "id":"button_text",
