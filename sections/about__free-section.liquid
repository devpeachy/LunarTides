                        <defs>
                        <radialGradient id="paint0_radial_828_27285" cx="0" cy="0" r="1" gradientUnits="userSpaceOnUse" gradientTransform="translate(32 40) rotate(90) scale(40 32)">
                        <stop offset="0.257934" stop-color="white"/>
                        <stop offset="1" stop-color="white" stop-opacity="0.29"/>
                        </radialGradient>
                        </defs>
                    </svg>
                {% endfor %}
            </div>
            <div class="free-svg-wrapper">
                <svg class="free-svg-first" width="945" height="123" viewBox="0 0 945 123" fill="none" xmlns="http://www.w3.org/2000/svg"  style="width: 100%; height: auto;">
