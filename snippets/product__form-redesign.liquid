{% if type == 'product' and section.settings.show_payment_button %}
  {% assign show_payment_button = true %}
{% elsif type == 'product' and block.settings.show_payment_button %}
  {% assign show_payment_button = true %}
{% elsif type == 'quickshop' and settings.show_dynamic_checkout_button %}
  {% assign show_payment_button = true %}
{% else %}
  {% assign show_payment_button = false %}
{% endif %}

{% assign variant = product.selected_or_first_available_variant %}

<div class="clearfix product_form product_form-redesign init smart-payment-button--{{ show_payment_button }} {% if product.variants.size > 1 or product.options.size > 1 %}product_form_options{% endif %} product_form--{{ settings.product_form_style }}"
      id="product-form-{{ product.id }}"
      data-product-form
      data-money-format="{{ shop.money_format }}"
      data-shop-currency="{{ shop.currency }}"
      data-select-id="product-select-{{ product.id }}{{ product-form }}{{ object.id }}{{ block.id }}"
      data-enable-state="{% if template contains 'product' %}true{% else %}false{% endif %}"
      data-product="{{ product | json | escape }}"
      {% if settings.limit_quantity or settings.display_inventory_left %}
        data-variant-inventory='[{%- for v in product.variants -%}{"id":{{v.id}},"inventory_quantity":{{v.inventory_quantity}},"inventory_management":"{{v.inventory_management}}","inventory_policy":"{{v.inventory_policy}}"}{% if forloop.last == false %},{% endif %}{%- endfor -%}]'
      {% endif %}
      data-product-id="{{ product.id }}"
      >
  {% form 'product', product %}
      <div class="atc-block">
          <div class="atc-block__left">
              {% if settings.display_product_quantity %}
                  <div class="purchase-details__quantity purchase-details__quantity-redesign product-quantity-box quantity-box--{{ settings.qty_box_style }}">
                      {% include 'quantity-box-redesign' %}
                  </div>
              {% endif %}

              {% if product.variants.size > 1 %}
                  {% if product.options.size > 1 %}
                      <div class="select-container select-container-redesign">
                      {% if type == 'quickshop' %}
                          <div class="select">
                              {% endif %}
                              <select id="product-select-{{ product.id }}{{ product-form }}{{ object.id }}{{ block.id }}" name="id" class="multi_select" data-variant-selector>
                                  {% for v in product.variants %}
                                      <option {% if v == variant %}selected="selected"{% endif %} value="{{ v.id }}" data-image-id="{{ v.featured_media.id }}" data-sku="{{ v.sku }}">{{ v.title }}</option>
                                  {% endfor %}
                              </select>
                              {% if type == 'quickshop' %}
                          </div>
                          {% endif %}
                      </div>
                  {% elsif product.options.size == 1 and product.variants.size > 1 or product.options.size == 1 and product.options[0] != "Title" %}
                      <div class="select-container select-container-redesign">
                          <label class="label">{{ product.options[0] }}</label>
                          <div>
                          {% if type == 'quickshop' %}
                              <div class="select">
                                  {% endif %}
                                  <select id="product-select-{{ product.id }}{{ product-form }}{{ object.id }}{{ block.id }}" name="id" data-variant-selector>
                                      {% for v in product.variants %}
                                          <option {% if v == variant %}selected="selected"{% endif %} value="{{ v.id }}" data-image-id="{{ v.featured_media.id }}" data-sku="{{ v.sku }}">{{ v.title }}</option>
                                      {% endfor %}
                                  </select>
                                  {% if type == 'quickshop' %}
                              </div>
                              {% endif %}
                          </div>
                      </div>
                  {% endif %}
              {% else %}
                  <input type="hidden" name="id" value="{{ variant.id }}" />
              {% endif %}
          </div>

          <div class="atc-block__right">
              <div class="cart-warning"></div>
              <div class="purchase-details__buttons">
                  {% if settings.cart_action == 'reload_page' %}
                      <input type="hidden" name="return_to" value="back" />
                  {% elsif settings.cart_action == 'redirect_checkout' %}
                      <input type="hidden" name="return_to" value="/checkout" />
                  {% endif %}

                  {% capture add_to_cart_label %}{% if collection_handles contains 'pre-order' %}{{ 'collections.general.pre_order' | t }}{% else %}{{ 'products.product.add_to_cart' | t }}{% endif %}{% endcapture %}
                  <button type="{% if settings.cart_action == 'mini_cart' or settings.cart_action == 'drawer' %}button{% else %}submit{% endif %}" name="add" class="button {% if settings.cart_action == 'mini_cart' or settings.cart_action == 'drawer' %} ajax-submit {% endif %}action_button button--add-to-cart {% if show_payment_button %} action_button--secondary {% endif %}" data-label={{ add_to_cart_label | json }} data-add-to-cart-trigger>
                      {% if  settings.button_cart_icon != blank and settings.button_cart_icon_position == 'left' %}
                          {% include settings.icon, name: settings.button_cart_icon, icon_class: 'icon--cart' %}
                      {% endif %}
                      <span class="text">{{ add_to_cart_label }}</span>
                      {% if  settings.button_cart_icon != blank and settings.button_cart_icon_position == 'right' %}
                          {% include settings.icon, name: settings.button_cart_icon, icon_class: 'icon--cart icon--right' %}
                      {% endif %}
                      <svg x="0px" y="0px" width="32px" height="32px" viewBox="0 0 32 32" class="checkmark">
                          <path fill="none" stroke-width="2" stroke-linecap="square" stroke-miterlimit="10" d="M9,17l3.9,3.9c0.1,0.1,0.2,0.1,0.3,0L23,11"/>
                      </svg>
                  </button>
              </div>
          </div>
      </div>

      <div class="shop-pay-block">
          {% comment %}
            Automatically inserted by Shop Pay Installments theme updater
          {% endcomment %}

          {% unless settings.disable_autogenerated_payment_terms %}
              {{ form | payment_terms }}
          {% endunless %}
      </div>

      <div class="additional-payment-methods">
          {% if show_payment_button %}
              {{ form | payment_button }}
          {% endif %}
      </div>

      {% if product.description != blank %}
          <div class="description description-redesign content has-padding-top">
              {{ product.description | split: '<!-- split -->' | first }}
          </div>
      {% endif %}

      {% if product.metafields.custom.current_color_title != blank and product.metafields.custom.current_color_image != blank %}
          <div class="current-color-block">
              <div class="capture">Selected color:</div>
              <div class="current-color__inner">
                  <div class="color-img">
                      <img src="{{ product.metafields.custom.current_color_image }}" alt="current-color-image">
                  </div>
                  <div class="color-title">{{ product.metafields.custom.current_color_title }}</div>
              </div>
          </div>
      {% endif %}

      {% if product.variants.size > 1 %}
        {% if settings.product_form_style == "swatches" and product.variants.size > 1 or settings.product_form_style == "swatches" and product.options[0] != "Title" %}
          <div class="swatch_options collection_swatches">
            {% for option in product.options %}
              {% include 'product__swatch', option: option %}
            {% endfor %}
          </div>
        {% endif %}
      {% endif %}

      {% if product.available %}
        {% if settings.display_inventory_left %}
          <p class="items_left">
            {% if variant.inventory_management != blank and variant.inventory_quantity > 0 %}
              {% capture items_left_text %}
                {% if variant.inventory_quantity == 1 %}
                  {{ 'products.product.items_left_count.one' | t }}
                {% else %}
                  {{ 'products.product.items_left_count.other' | t }}
                {% endif %}
              {% endcapture %}
              {% if variant.inventory_quantity <= settings.inventory_threshold %}
                {{ variant.inventory_quantity }} {{ items_left_text }}
              {% endif %}
            {% endif %}
          </p>
        {% endif %}
  
      {% if product.metafields.other-colors.color_image_link_1 != blank %}
        <div class="other-colors other-colors-redesign">
          <h4 class="other-colors__title">Other Colors</h4>
          <ul>


            {% for i in (1..50) %}
            {% capture index %}{{ forloop.index }}{% endcapture %}

            {% capture color_image_link %}color_image_link_{{ index }}{% endcapture %}
            {% capture color_image %}color_image_{{ index }}{% endcapture %}
            {% capture color_image_product_title %}color_image_product_title_{{ index }}{% endcapture %}


              {% unless product.metafields.other-colors[color_image_link] == blank %}
              <li>
                <div class="tooltip">
                    <a href="{{ product.metafields.other-colors[color_image_link] }}">

                        <img src="{{ product.metafields.other-colors[color_image] }}" alt="other-color-image">
                        <span class="tooltiptext"> {{ product.metafields.other-colors[color_image_product_title] }} </span>
                    </a>
                </div>
              </li>
              {% endunless %}
            {% endfor %}


          </ul>
        </div>
      {% endif %}
  {% endif %}
{% endform %}
</div>
