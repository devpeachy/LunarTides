<style>
    body {
        background-position: center !important;
        background-repeat: no-repeat !important;
        background-size: cover !important;
    }

    {% if template contains 'index' %}
        body {
            background-position: center !important;
        }

        {% if settings.bg_img != blank or settings.bg_img_mob != blank or settings.bg_color != blank %}
            body {
                {% if settings.bg_img != blank and settings.bg_img_mob != blank %}
                    background-image: url("{{ settings.bg_img_mob | img_url: 'master' }}");
                {% endif %}

                background-color: {{ settings.bg_color }};
            }
            @media (min-width: 600px) {
                body {
                    {% if settings.bg_img != blank and settings.bg_img_mob != blank %}
                        background-image: url("{{ settings.bg_img | img_url: 'master' }}");
                    {% endif %}

                    background-color: {{ settings.bg_color }};
                }
            }
        {% endif %}
    {% endif %}

